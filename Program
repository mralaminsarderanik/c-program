using System;

namespace program
{
    class Employee
    {
        public string name;
        public int age;
        public Employee(string name, int age)
        {
            this.name = name;
            this.age = age;
        }

        public void Display()
        {
            Console.WriteLine("Name : " + name);
            Console.WriteLine("Age : " + age);
        }
    }

class Program
    {
        public static void Main()
        {
            Console.WriteLine("Enput your name :");
            string name = Convert.ToString(Console.ReadLine());




            Console.WriteLine("Enput your Age : ");
            int age = Convert.ToInt32(Console.ReadLine());


            Employee empo = new Employee (name, age);

            Console.WriteLine("Employee Name : " + empo.name);
            Console.WriteLine("Employee Age : " + empo.age);

            empo.Display();
        }
    }
}
